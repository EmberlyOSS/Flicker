{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Flicker",
  "version": "0.1.0-alpha",
  "identifier": "ca.embrly.flicker",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Flicker",
        "width": 900,
        "height": 800,
        "minWidth": 600,
        "minHeight": 500,
        "center": true,
        "fullscreen": false,
        "resizable": true,
        "alwaysOnTop": false,
        "visible": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/EmberlyOSS/Flicker/releases/latest/download/latest.json"
      ],
      "pubkey": ""
    }
  }
}
